@model LoginViewModel

@{
    ViewData["Title"] = "Inicio";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <p style="margin:2rem 0; background-color: cadetblue; ">Barrio Mena</p>
           

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="#">Sobre Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="#">Galeria</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="#">Directiva</a>
                    </li>
                </ul>

            </div>
        </div>
        
    </nav>
</header>
<h1 class="text-center">Inicio de Sesión</h1>

@if (ViewData.Keys.Contains("mensaje"))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["mensaje"]
    </div>
}



<div class="card mx-auto" style="max-width: 400px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); border-radius: 10px;">
    <div class="card-body p-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="Password" id="password" type="password" class="form-control" />
                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">
                        <img id="toggle-icon" src="https://img.icons8.com/ios-glyphs/30/000000/visible.png" alt="Show/Hide Password" style="margin-left: 5px;" />
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                <label class="form-check-label" asp-for="Recuerdame"></label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="d-grid mt-3">
                <a class="btn btn-success" asp-action="Registro">Crear una nueva cuenta</a>
            </div>
        </form>
    </div>
</div>

<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("password");
        var toggleIcon = document.getElementById("toggle-icon");
        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleIcon.src = "https://img.icons8.com/ios-glyphs/30/000000/invisible.png";
        } else {
            passwordField.type = "password";
            toggleIcon.src = "https://img.icons8.com/ios-glyphs/30/000000/visible.png";
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

