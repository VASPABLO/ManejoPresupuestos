<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManejoPresupuestos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManejoPresupuestos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="ManejoPresupuestos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="ManejoPresupuestos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="ManejoPresupuestos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fullcalendar/main.min.css"/>
</head>
<body>
    <header>

      
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Transacciones" asp-action="Index">Transacciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cuentas" asp-action="Index">Cuentas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="TiposCuentas" asp-action="Index">Tipos Cuentas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Categorias" asp-action="Index">Categorias</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="InformacionPersonal" asp-action="Index">Socios</a>
                            </li>

                            
                            <partial name="_LinksLogin" />
                        }
                        
                    </ul>
                   
                </div>
            </div>

           
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark" style="background-color: #1a1a1a; !important">
        <div class="container py-4">
            <span class="text-white">&copy; 2024 - Manejo de Presupuesto -</span> <a href="https://portafoliovirtualpablo.netlify.app/" class="text-white">Desarrollado por Pablo Vásquez</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
