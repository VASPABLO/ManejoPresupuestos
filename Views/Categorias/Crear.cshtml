@model Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}
@* <h1>Crear Categoría</h1> *@
<h5>La categoría nos permite indicar en qué gastamos nuestro dinero, también, de dónde provienen nuestros ingresos.</h5>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear Nueva Categoría</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Crear">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TipoOperacionId" class="form-label"></label>
                        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" class="form-select"></select>
                        <span asp-validation-for="TipoOperacionId"></span>
                    </div>
                    <button class="btn-primary btn">Enviar</button>
                    <a asp-action="Index" class="btn-secondary btn">Cancelar</a>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
